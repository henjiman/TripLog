@model Trip

@*Step number 1 of the three-step form*@

<form asp-action="AddStep1" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Destination">Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Accommodation">Accommodations</label>
        <input asp-for="Accommodation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <input type="hidden" asp-for="TripId" />

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-controller="Trip" asp-action="Cancel" class="btn btn-primary">Cancel</a>
</form>

